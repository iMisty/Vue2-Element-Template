{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist", // TS文件编译后会放入到此文件夹内
    "baseUrl": "./",
    "paths": {
      "@": ["src/*"]
    }
  },
  "include": [
    "src/*" //根据项目的路径指定
  ],
  "exclude": ["node_modules", "**/*.ts"]
}
